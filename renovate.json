{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":prConcurrentLimitNone",
    ":prConcurrentLimit20",
    "group:dotNetCore"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch"],
          "matchDepTypes": ["devDependencies"],
          "automerge": true
        }
      ]
    }
  ]
}
